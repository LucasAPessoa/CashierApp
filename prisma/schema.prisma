generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  isDeleted Boolean @default(false)

  @@map("users")
}

enum CategoryType {
  CREDIT
  DEBIT
}

model Categories {
  id        Int          @id @default(autoincrement())
  name      String
  type      CategoryType
  deletedAt DateTime?

  @@map("categories")
}
